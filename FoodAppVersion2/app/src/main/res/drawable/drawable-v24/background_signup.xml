<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <shape
            >
            <stroke
                android:width="2dp"
                android:color="#df546e"/>
            <corners
                android:radius="25dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>

            <solid android:color="@color/divider"/>

        </shape>
    </item>
    <item>
        <shape
            >
            <stroke
                android:width="2dp"
                android:color="#df546e"/>
            <corners
                android:radius="25dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>

            <solid android:color="#df546e"/>

        </shape>
    </item>
</selector>